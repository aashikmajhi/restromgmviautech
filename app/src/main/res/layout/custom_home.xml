<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/onclickLayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/title_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Chicken Pesto"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <CheckBox
                android:id="@+id/chbContent"
                android:outlineSpotShadowColor="@color/dark_red"
                android:buttonTint="@color/dark_red"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:clickable="false"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/title_food"
                android:foregroundGravity="right" />

            <TextView
                android:id="@+id/chbContentcheck"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:text="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/food12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_food"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="1:2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/food_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food12"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:text="Althought very food item in the retro try"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/food_rs_gg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_desc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:text="Rs."
                android:textColor="@color/dark_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/food_rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_desc"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/food_rs_gg"
                android:text="2000"
                android:textColor="@color/dark_red"
                android:textSize="18sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_desc"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/food_rs"
                android:gravity="right">

                <ImageView
                    android:id="@+id/remove_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/remove_circl_outline_24" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/total_amount_qty_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/remove_img"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/add_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/total_amount_qty_"
                    android:src="@drawable/ic_baseline_add_circle" />


            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>