    <!--main menu of the app-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_light_red</item>
        <item name="colorPrimaryDark">@color/light_dark_red</item>
        <item name="colorOnPrimary">@color/light_dark_red</item>
        <item name="android:textColorSecondary">@color/white</item> <!--for changing the color of the communicate in navigation drawerlayout-->
        <item name="android:listDivider">@color/black</item>
        <item name="colorNavigationItem">@color/menu_item_colot_state</item>
        <item name="colorNavigationItemSelected">@color/light_dark_red</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>
    <!--background of the navigation item-->
    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="DialogLevelCompleted">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DialogAnimation1">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="MoreDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/more_dialog_up</item>
    </style>




</resources>